<%= stylesheet_link_tag    'application' %>

<h1>Add a comment for <%= @restaurant.name %></h1>
<h3>Existing comments:</h3>
<div class="current_comments">
  <% if @comments.length != 0 %>
    <ul id="comment_list">
    <% @comments.each do |c| %>
      <li><%= c.content %> - <%= link_to c.chef.name, chef_path(c.chef.id) %></li>
    <% end %>
    </ul>
  <% else %>
    <p>None!</p>
  <% end %>
</div>
<%= form_for :comment, :url => url_for(:controller => 'comments', :action => 'create'), :html => {:id => "comment_form"}, method: :post do |f| %>
  <%= f.label :content, "Thoughts about this restaurant:" %>
  <%= f.text_field :content, placeholder: @comment.errors[:content] ? @comment.errors[:content][0] : '' %>
  <%= f.submit "Add comment", :id => "submit_comment", :class => "button" %>
<% end %>
