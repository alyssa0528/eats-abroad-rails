<!DOCTYPE html>
<html>
  <head>
    <title>Eats Abroad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navigation">
      <img src="/Eats Abroad Logo-v-5A Mar.jpg" width="165" height="125" alt="Eats Abroad logo">
      <ul>
        <a href="/">Home</a> |

        <a href="/chefs/<%=current_user[:id]%>" id="profile">My Profile</a> |
        <a href="/restaurants" id="all_restaurants">Browse Restaurants</a> |
        <a href="/restaurants/new">Add a Restaurant</a> |
        <%= link_to "Log Out", signout_path, method: :delete %>
      </ul>
    </div>
    <div id="body-container">
      <%= yield %>
    </div>
  </body>
</html>
